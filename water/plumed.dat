# vim:ft=plumed
LOAD FILE=OPESmultiLambda.cpp
LOAD FILE=LennardJones.cpp

eneWAT: ENERGY

LENNARDJONES ...
 LABEL=eneLJ
 GROUPA=1-1152:3
 SIGMA=0.31536
 EPSILON=0.64852
 RCUT=0.85
 NLIST
 NL_CUTOFF=1.0
 NL_STRIDE=10
... LENNARDJONES

DeltaU: CUSTOM ARG=eneLJ,eneWAT FUNC=x-y PERIODIC=NO

OPES_MULTILAMBDA ...
  LABEL=ml
  ARG=DeltaU
  PACE=100
  TEMP=443
... OPES_MULTILAMBDA

PRINT ARG=* STRIDE=100 FILE=COLVAR

ENDPLUMED

